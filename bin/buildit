# GSLITE_ROOT environment variable need to be set

if [ -z "$GSLITE_ROOT" ]
then
    echo "GSLITE_ROOT must be set to non-empty string"
    exit -1
fi

$GSLITE_ROOT/bin/translate_fta -h localhost -c -M -R $GSLITE_ROOT -C $GSLITE_ROOT/cfg -l $GSLITE_ROOT/qlib packet_schema.txt *.gsql
ret=$?
if [ $ret -ne 0 ]
then
    echo "Query translation failed!"
    exit $ret
fi
    
make
ret=$?
if [ $ret -ne 0 ]
then
    echo "Query build failed!"
    exit $ret
fi    
exit $ret

